# Database Configuration
DATABASE_URL=postgresql://migration_user:migration_pass@localhost:5432/migration_db
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your_32_byte_encryption_key_here_change_in_production

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=migration_assistant

# Platform API Keys
SHOPIFY_APP_KEY=your_shopify_app_key
SHOPIFY_APP_SECRET=your_shopify_app_secret
SHOPIFY_SCOPES=read_products,read_customers,read_orders,read_content,read_analytics

WOOCOMMERCE_CONSUMER_KEY=your_woocommerce_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_woocommerce_consumer_secret

MAGENTO_ACCESS_TOKEN=your_magento_access_token
MAGENTO_BASE_URL=https://your-magento-store.com

IDEASOFT_API_KEY=your_ideasoft_api_key
IDEASOFT_BASE_URL=https://your-store.ideasoft.com.tr

IKAS_API_KEY=your_ikas_api_key
IKAS_BASE_URL=https://your-store.myikas.com

BIGCOMMERCE_ACCESS_TOKEN=your_bigcommerce_access_token
BIGCOMMERCE_STORE_HASH=your_store_hash

# Email & Communication
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@migration-assistant.com

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Monitoring & Analytics
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin123
SENTRY_DSN=your_sentry_dsn

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
MAX_CONCURRENT_MIGRATIONS=5
DEFAULT_MIGRATION_TIMEOUT=3600

# Queue Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_MAX_WORKERS=4

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=migration-assistant-files

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Development
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000